# Book Automation Pipeline Environment Variables
# Copy this file to .env and fill in your values

# === CORE AI SERVICES ===

# Anthropic Claude API (NOT NEEDED - Claude Code CLI already provides this)
# ⚠️ DO NOT SET THIS unless you want to use REST API directly (not recommended)
# ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini API Key (Optional - For ultra-fast fact-checking with Flash 2.5)
# Get yours at: https://makersuite.google.com/app/apikey
# Model: gemini-2.5-flash
# GEMINI_API_KEY=AIzaSy...

# Perplexity API Key (Required for deep research)
# Get yours at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# Ideogram API Configuration (Required for cover generation)
# Get your API key from: https://ideogram.ai (Manage API Keys)
IDEOGRAM_API_KEY=ideogram_sk_live_...

# === MONETIZATION ===

# Amazon Affiliate Configuration
# Get your tag from: https://affiliate-program.amazon.com/
AMAZON_ASSOCIATE_TAG=your-tag-20
AMAZON_REGION=US

# Amazon Product Advertising API (PA-API 5.0) - Optional but recommended
# Get yours at: https://webservices.amazon.com/paapi5/documentation/
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_PARTNER_TAG=your-tag-20

# ShareASale Affiliate
# Get from: https://www.shareasale.com/
SHAREASALE_ID=123456

# ClickBank Affiliate
# Get from: https://accounts.clickbank.com/
CLICKBANK_ID=yourname

# === PUBLISHING PLATFORMS ===

# Gumroad Configuration (Required for auto-publishing)
# Get yours at: https://app.gumroad.com/settings/developer
GUMROAD_ACCESS_TOKEN=your-gumroad-token
GUMROAD_AFFILIATE_ID=your-affiliate-id  # Optional - for affiliate program

# Amazon KDP (Optional - for KDP automation)
KDP_EMAIL=your-amazon-email
KDP_PASSWORD=your-amazon-password

# === DEPLOYMENT ===

# Hostinger VPS Configuration
# Get from your Hostinger control panel
HOSTINGER_API_TOKEN=your-hostinger-api-token
HOSTINGER_VPS_HOST=your-vps.hostinger.com
HOSTINGER_SSH_USER=root
HOSTINGER_SSH_KEY=~/.ssh/hostinger_rsa

# Cloudflare (Optional - for CDN)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id

# === INFRASTRUCTURE ===

# Redis Configuration (Required for topic buffer)
# Default: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Control Panel Configuration
CONTROL_PORT=3005

# Chat WebSocket Server (Optional)
CHAT_WS_URL=ws://localhost:3001
CHAT_WS_PORT=3001

# === QUALITY ASSURANCE ===

# BrowserStack (Optional - for cross-browser testing)
BROWSERSTACK_USERNAME=your-username
BROWSERSTACK_ACCESS_KEY=your-access-key

# LanguageTool Server (Optional - for grammar checking)
LANGUAGETOOL_URL=http://localhost:8081

# === SOCIAL MEDIA APIS (Optional - for future marketing features) ===

# Twitter/X API v2 (Optional - for marketing automation)
# Get yours at: https://developer.twitter.com/
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
# TWITTER_ACCESS_TOKEN=your-twitter-access-token
# TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook Graph API (Optional - for marketing automation)
# Get yours at: https://developers.facebook.com/
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
# FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-token

# LinkedIn API (Optional - for marketing automation)
# Get yours at: https://www.linkedin.com/developers/
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
# LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Instagram Basic Display API (Optional)
# Get yours at: https://developers.facebook.com/docs/instagram-basic-display-api
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-instagram-user-id

# === EMAIL SERVICE (Optional - for future email features) ===

# SendGrid (Optional - for email automation)
# Get yours at: https://sendgrid.com/
# SENDGRID_API_KEY=SG.your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=your-verified-email@domain.com
# SENDGRID_FROM_NAME=Your Company Name

# === CONTENT DISCOVERY ===

# Product Hunt API (Optional - for trending scanner)
# Get yours at: https://www.producthunt.com/v2/oauth/applications
PRODUCTHUNT_API_TOKEN=your-producthunt-token
PRODUCTHUNT_API_SECRET=your-producthunt-secret

# === NOTIFICATIONS ===

# Slack Webhook (Optional - for deployment notifications)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# === ENVIRONMENT ===

# Node Environment
NODE_ENV=production

# Pipeline Configuration
DAILY_EBOOK_TARGET=1
DEFAULT_PRICE_POINT=9.99
AUTO_PUBLISH=true
DEPLOY_TO_PRODUCTION=false
GENERATE_PDF=false
USE_ORCHESTRATOR=false
ENGENHEIRO_BRAVO=false

# === SECURITY ===

# Rate Limiting
GEMINI_MAX_CALLS_PER_BUILD=100
PERPLEXITY_RATE_LIMIT=10
AMAZON_API_RATE_LIMIT=1

# === ANALYTICS & SEO ===

# Google Analytics 4 (Optional - for traffic analysis)
# Get yours at: https://analytics.google.com/
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_CREDENTIALS_JSON=path/to/credentials.json

# Google Search Console (Optional - for SEO monitoring)
# Get yours at: https://search.google.com/search-console
GSC_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# === PAYMENT PROCESSING ===

# Stripe (Optional - for direct sales)
# Get yours at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# === ADDITIONAL EBOOK PLATFORMS ===

# Apple Books (Optional)
# Get yours at: https://itunesconnect.apple.com/
APPLE_BOOKS_API_KEY=your-apple-books-key
APPLE_BOOKS_API_SECRET=your-apple-books-secret
APPLE_BOOKS_VENDOR_ID=your-vendor-id

# Kobo Writing Life (Optional)
# Get yours at: https://www.kobo.com/writinglife
KOBO_API_KEY=your-kobo-api-key
KOBO_API_SECRET=your-kobo-api-secret

# === DEMO MODE ===
# Set to true for testing without real API calls
DEMO_MODE=false